{
    "workspace": [
        "./steamutils-backend"
    ],
    "tasks": {
        "dev": "deno run --watch -A --env --unstable-kv src/index.ts",
        "start": "deno run --allow-net --allow-env --allow-read --env --unstable-kv src/index.ts",
        "deploy": "deno run --allow-net --allow-env --allow-read --env --unstable-kv src/deploy-commands.ts",
        "format": "deno fmt",
        "format:check": "deno fmt --check",
        "lint": "deno lint",
        "test": "deno test --allow-net --allow-env --env",
        "check": "deno task format:check && deno task lint && deno task test",
        "install-hooks": "deno run --allow-read --allow-write scripts/install-hooks.ts"
    },
    "imports": {
        "steamutils-backend": "./steamutils-backend/app.ts",
        "@hono/hono": "jsr:@hono/hono@^4.11.7",
        "@std/assert": "jsr:@std/assert@1",
        "@std/fs": "jsr:@std/fs@1",
        "discord.js": "npm:discord.js@^14.24.1",
        "steamid": "npm:steamid@^2.1.0",
        "@zod/zod": "jsr:@zod/zod@^4.3.6",
        "@wok/djwt": "jsr:@wok/djwt@^3.0.2"
    },
    "fmt": {
        "lineWidth": 160,
        "indentWidth": 4
    }
}
